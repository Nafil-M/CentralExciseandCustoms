<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalDetailssActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:background="@color/light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3_orders_driver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/personal_details"
            android:fontFamily="@font/lorin_bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/back_icon_top_orders_driver"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/back_icon_top_orders_driver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:padding="8dp"
            android:onClick="onClickBack"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="OnClick" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar"
        android:clipToPadding="false"
        android:layout_marginTop="10dp"
        android:scrollbars="none">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appbar"
        android:layout_marginTop="30dp"
        android:id="@+id/ggg">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_person_black_24dp" />

        <RelativeLayout
            android:id="@+id/usernamelyt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivProfileImage"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/uuu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/lorin_regular"
                android:text="Name"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edittextt"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:background="@drawable/all_side_curved_white"
                android:fontFamily="@font/lorin_regular"
                android:paddingStart="10dp"
                android:singleLine="true" />


        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usernamelyt"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/uuu2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/lorin_regular"
            android:text="Residential Address"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edittextt2"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:background="@drawable/all_side_curved_white"
            android:fontFamily="@font/lorin_regular"
            android:paddingStart="10dp" />

    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rAddress"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/uuuu2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/lorin_regular"
                android:text="Permenant Address"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edittextt22"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="30dp"
                android:background="@drawable/all_side_curved_white"
                android:fontFamily="@font/lorin_regular"
                android:paddingStart="10dp" />

        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mobileee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pAddress"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/uuu3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/lorin_regular"
            android:text="Mobile"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edittext3"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:background="@drawable/all_side_curved_white"
            android:fontFamily="@font/lorin_regular"
            android:inputType="number"
            android:paddingStart="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/mobileee"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/uuu4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/lorin_regular"
            android:text="DOB"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edittext4"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginStart="30dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/all_side_curved_white"
            android:fontFamily="@font/lorin_regular"
            android:paddingStart="10dp" />

    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dob"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/uuu5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/lorin_regular"
                android:text="E Mail"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edittext5"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="30dp"
                android:background="@drawable/all_side_curved_white"
                android:fontFamily="@font/lorin_regular"
                android:paddingStart="10dp" />

        </RelativeLayout>

    </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/uploadpersonal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_background"
        android:fontFamily="@font/lorin_bold"
        android:gravity="center"
        android:text="UPLOAD"
        android:textColor="@color/white" />



</RelativeLayout>