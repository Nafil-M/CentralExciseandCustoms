<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OfficialDetails">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:background="@color/light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3_orders_driver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/lorin_bold"
            android:text="@string/official_details"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/back_icon_top_orders_driver"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/back_icon_top_orders_driver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:onClick="onClickBack"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="OnClick" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar"
        android:clipToPadding="false"
        android:layout_marginTop="10dp"
        android:scrollbars="none">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar">

    <RelativeLayout
        android:id="@+id/empid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/uuuu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/lorin_regular"
            android:text="Employee ID"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/empidedit"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:background="@drawable/all_side_curved_white"
            android:fontFamily="@font/lorin_regular"
            android:paddingStart="10dp" />

    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/Dateofjoining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/empid"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/uuu6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/lorin_regular"
            android:text="Date of Joining"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/dateofjedit"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:background="@drawable/all_side_curved_white"
            android:fontFamily="@font/lorin_regular"
            android:paddingStart="10dp" />

    </RelativeLayout>


        <RelativeLayout
            android:id="@+id/workplace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Dateofjoining"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/uuu5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/lorin_regular"
                android:text="Work Place"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/workplaceedit"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="30dp"
                android:background="@drawable/all_side_curved_white"
                android:fontFamily="@font/lorin_regular"
                android:paddingStart="10dp" />

        </RelativeLayout>


    <RelativeLayout
        android:id="@+id/startdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/workplace"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/uuu7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/lorin_regular"
            android:text="Start Date"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/startdateedit"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:background="@drawable/all_side_curved_white"
            android:fontFamily="@font/lorin_regular"
            android:paddingStart="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/enddate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/startdate"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/uuu8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/lorin_regular"
            android:text="Releave Date"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/enddateedit"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginStart="30dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/all_side_curved_white"
            android:fontFamily="@font/lorin_regular"
            android:paddingStart="10dp" />

    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/desig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enddate"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/uuu9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/lorin_regular"
                android:text="Designation"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/desigedit"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="30dp"
                android:background="@drawable/all_side_curved_white"
                android:fontFamily="@font/lorin_regular"
                android:paddingStart="10dp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desig"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/uuu10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/lorin_regular"
                android:text="Location"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/locedit"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="30dp"
                android:background="@drawable/all_side_curved_white"
                android:fontFamily="@font/lorin_regular"
                android:paddingStart="10dp" />

        </RelativeLayout>



    <TextView
        android:id="@+id/uploadofficial"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@id/location"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_background"
        android:fontFamily="@font/lorin_bold"
        android:gravity="center"
        android:text="UPDATE"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uploadofficial"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:weightSum="10"
        android:background="@drawable/rounded_top_blue_lowradius">

        <TextView
            android:id="@+id/id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/lorin_bold"
            android:layout_weight="3.5"
            android:text="Start Date"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/lightGreyBackground" />

        <TextView
            android:id="@+id/mop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/lorin_bold"
            android:text="End Date"
            android:layout_weight="4"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/lightGreyBackground" />

        <TextView
            android:id="@+id/amt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/lorin_bold"
            android:text="Location"
            android:textColor="@color/white"
            android:layout_weight="2.5"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/noData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/noReportAvailable"
        android:layout_gravity="center"
        android:textSize="13sp"
        android:visibility="gone"
        android:fontFamily="@font/lorin_light"
        android:gravity="center"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingBottom="10dp"
        android:overScrollMode="never"
        android:background="@drawable/cash_report_table" />

    </LinearLayout>

    </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>