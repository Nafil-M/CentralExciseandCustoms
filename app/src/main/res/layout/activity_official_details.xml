<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OfficialDetails">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3_orders_driver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/lorin_bold"
            android:text="@string/official_details"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/back_icon_top_orders_driver"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/back_icon_top_orders_driver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:onClick="onClickBack"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="OnClick" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar"
        android:clipToPadding="false"
        android:layout_marginTop="10dp"
        android:scrollbars="none">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar">

    <RelativeLayout
        android:id="@+id/code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/uuuu"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/lorin_regular"
            android:text="Employee Id"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/codeedit"
            android:layout_height="45dp"
            android:layout_width="match_parent"
            android:layout_toEndOf="@id/uuuu"
            android:layout_marginStart="15dp"
            android:background="@drawable/all_side_curved_white"
            android:fontFamily="@font/lorin_regular"
            android:paddingStart="10dp" />

    </RelativeLayout>




        <RelativeLayout
            android:id="@+id/firstname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/code"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/uuu5"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/lorin_regular"
                android:text="First Name"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/firstnameedit"
                android:layout_width="match_parent"
                android:layout_toEndOf="@id/uuu5"
                android:layout_marginStart="15dp"
                android:layout_height="45dp"
                android:background="@drawable/all_side_curved_white"
                android:fontFamily="@font/lorin_regular"
                android:paddingStart="10dp" />

        </RelativeLayout>


    <RelativeLayout
        android:id="@+id/middlename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/firstname"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/uuu7"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/lorin_regular"
            android:text="Middle Name"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/middlenameedit"
            android:layout_width="match_parent"
            android:layout_toEndOf="@id/uuu7"
            android:layout_marginStart="15dp"
            android:layout_height="45dp"
            android:background="@drawable/all_side_curved_white"
            android:fontFamily="@font/lorin_regular"
            android:paddingStart="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/middlename"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/uuu8"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/lorin_regular"
            android:text="Last Name"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/lastnameedit"
            android:layout_width="match_parent"
            android:layout_toEndOf="@id/uuu8"
            android:layout_marginStart="15dp"
            android:layout_height="45dp"
            android:background="@drawable/all_side_curved_white"
            android:fontFamily="@font/lorin_regular"
            android:paddingStart="10dp" />

    </RelativeLayout>


        <RelativeLayout
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/lastname"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/uuu111"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/lorin_regular"
                android:text="E Mail"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/emailedit"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="textEmailAddress"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@id/uuu111"
                android:background="@drawable/all_side_curved_white"
                android:fontFamily="@font/lorin_regular"
                android:paddingStart="10dp" />

        </RelativeLayout>






        <RelativeLayout
            android:id="@+id/designation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/uuu10"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/lorin_regular"
                android:text="Designation"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/desigedit"
                android:layout_width="match_parent"
                android:layout_toEndOf="@id/uuu10"
                android:layout_marginStart="15dp"
                android:layout_height="45dp"
                android:background="@drawable/all_side_curved_white"
                android:fontFamily="@font/lorin_regular"
                android:paddingStart="10dp" />

        </RelativeLayout>







        <RelativeLayout
            android:id="@+id/dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/designation"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/uuu17"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/lorin_regular"
                android:text="Date Of Birth"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/dobet"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@id/uuu17"
                android:background="@drawable/all_side_curved_white"
                android:fontFamily="@font/lorin_regular"
                android:inputType="date"
                android:paddingStart="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/doj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dob"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/uuu18"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/lorin_regular"
                android:text="Date Of Joining"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/dojet"
                android:layout_width="match_parent"
                android:layout_toEndOf="@id/uuu18"
                android:layout_marginStart="15dp"
                android:layout_height="45dp"
                android:inputType="date"
                android:layout_alignParentEnd="true"
                android:background="@drawable/all_side_curved_white"
                android:fontFamily="@font/lorin_regular"
                android:paddingStart="10dp" />

        </RelativeLayout>






        <RelativeLayout
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doj"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/uuu25"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/lorin_regular"
                android:text="Address"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/resadd1et"
                android:layout_width="match_parent"
                android:layout_toEndOf="@id/uuu25"
                android:layout_marginStart="15dp"
                android:layout_height="90dp"
                android:gravity="start"
                android:background="@drawable/all_side_curved_white"
                android:fontFamily="@font/lorin_regular"
                android:paddingStart="10dp"
                android:paddingTop="10dp"/>

        </RelativeLayout>



        <TextView
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/address"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/bg2"
            android:fontFamily="@font/lorin_bold"
            android:gravity="center"
            android:text="@string/edit"
            android:textColor="@color/white" />





    <TextView
        android:id="@+id/uploadofficial"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/edit"
        android:layout_centerInParent="true"
        android:layout_marginTop="17dp"
        android:background="@drawable/bg2"
        android:fontFamily="@font/lorin_bold"
        android:gravity="center"
        android:text="@string/update"
        android:layout_marginBottom="25dp"
        android:textColor="@color/white" />

    </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>