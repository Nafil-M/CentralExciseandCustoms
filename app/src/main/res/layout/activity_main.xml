<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:background="@color/light"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3_orders_driver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/lorin_bold"
            android:text="@string/central_exsise_and_customs"
            android:textColor="@color/black"
            android:textSize="19sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



    </RelativeLayout>

    <TextView
        android:id="@+id/pd"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/all_side_curved_color"
        android:fontFamily="@font/lorin_regular"
        android:gravity="center"
        android:paddingLeft="45dp"
        android:paddingTop="10dp"
        android:paddingRight="45dp"
        android:paddingBottom="10dp"
        android:text="Personal Details"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/od"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/all_side_curved_color"
        android:fontFamily="@font/lorin_regular"
        android:gravity="center"
        android:paddingLeft="45dp"
        android:paddingTop="10dp"
        android:paddingRight="45dp"
        android:paddingBottom="10dp"
        android:text="Official Details"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>